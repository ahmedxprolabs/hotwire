<div class="max-w-md mx-auto bg-white shadow-lg rounded-2xl p-6">
  <h2 class="text-2xl font-bold mb-6 text-center">Login</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "space-y-4") do |f| %>
    <div>
      <%= f.label :email, class: "block text-gray-700 font-semibold mb-2" %>
      <%= f.email_field :email, autofocus: true, class: "w-full border-gray-300 rounded-lg shadow-sm focus:ring-indigo-500 focus:border-indigo-500 p-2" %>
    </div>

    <div>
      <%= f.label :password, class: "block text-gray-700 font-semibold mb-2" %>
      <%= f.password_field :password, autocomplete: "current-password", class: "w-full border-gray-300 rounded-lg shadow-sm focus:ring-indigo-500 focus:border-indigo-500 p-2" %>
    </div>

    <div class="flex items-center">
      <%= f.check_box :remember_me, class: "mr-2" %>
      <%= f.label :remember_me, class: "text-gray-600" %>
    </div>

    <div>
      <%= f.submit "Log in", class: "w-full bg-indigo-600 text-white px-4 py-2 rounded-lg hover:bg-indigo-700" %>
    </div>
  <% end %>

  <div class="mt-4 text-center">
    <%= render "devise/shared/links" %>
  </div>
</div>
