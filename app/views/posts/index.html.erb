<div class="flex items-center justify-between mb-6">
  <h1 class="text-2xl font-bold">Posts</h1>
  <%= link_to "New Post", new_post_path,
        data: { turbo_frame: "new_post" },
        class: "px-4 py-2 bg-blue-600 text-white rounded-lg shadow hover:bg-blue-700" %>
</div>

<div class="mb-6">
  <%= search_form_for @q, url: posts_path, html: { class: "flex gap-2" } do |f| %>
    <%= f.search_field :title_or_body_cont,
          placeholder: "Search posts...",
          class: "flex-1 border rounded-lg px-3 py-2 focus:ring-2 focus:ring-blue-500" %>
    <%= f.submit "Search", class: "px-4 py-2 bg-gray-200 rounded-lg hover:bg-gray-300" %>
  <% end %>
</div>

<turbo-frame id="new_post" class="block mb-6"></turbo-frame>

<turbo-frame id="posts">
  <%= render @posts %>

  <div class="mt-6 flex justify-center">
    <%= paginate @posts%>
  </div>
</turbo-frame>
