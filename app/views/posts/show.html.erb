<turbo-frame id="<%= dom_id(@post) %>">
  <div class="bg-white rounded-xl shadow p-4 border">
    <h2 class="text-xl font-bold mb-2 text-gray-900"><%= @post.title %></h2>
    <p class="text-gray-700"><%= @post.body %></p>

    <div class="flex gap-4 mt-4 text-sm">
      <%= link_to "Edit", edit_post_path(@post),
            data: { turbo_frame: dom_id(@post) },
            class: "text-green-600 hover:underline" %>

      <%= button_to "Delete", post_path(@post),
            method: :delete,
            data: { turbo_confirm: "Are you sure?" },
            class: "text-red-600 hover:underline" %>

      <%= link_to "Back to Posts", posts_path, class: "text-gray-600 hover:underline" %>
    </div>
  </div>
</turbo-frame>
