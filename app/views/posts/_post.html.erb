<turbo-frame id="<%= dom_id(post) %>" data-controller="post" class="bg-white rounded-xl shadow p-4 border">
  <div class="flex items-start justify-between">
    <h3 class="text-lg font-semibold text-gray-800"><%= post.title %></h3>
    <button data-action="click->post#toggle" class="text-sm text-gray-600 hover:text-gray-900 underline">Toggle Details</button>
  </div>

  <p data-post-target="body" class="text-gray-700 mt-2">
    <%= post.body %>
  </p>

  <div class="flex gap-4 mt-4 text-sm ml-8">
    <%= link_to "Edit", edit_post_path(post),
          data: { turbo_frame: dom_id(post) },
          class: "text-green-600 hover:underline" %>

    <%= button_to "Delete", post_path(post),
          method: :delete,
          data: { turbo_confirm: "Are you sure?" },
          class: "text-red-600 hover:underline" %>
  </div>
</turbo-frame>
